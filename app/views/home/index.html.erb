<div class="row">
  <div class="col">
    <div class="jumbotron">
      <h1>Welcome to WebURL.</h1>
      <p>Keep store and share your favourite Urls.</p>
    </div>
  </div>
</div>

<div class="row">
  <% @urls.each do |url| %>
    <div class="col-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title"><%=  link_to url.title, url_path(url) %></h6>
          <p class="card-text"><%= link_to url.url, url.url, target: '_blank' %></p>
          <%= link_to 'Show', url_path(url), class: 'btn btn-sm btn-primary' %>
          <p>Update <%= time_ago_in_words(url.updated_at) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
